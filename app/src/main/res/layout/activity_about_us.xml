            android:layout_height="85dp">
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#e53935"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="DAY 02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
